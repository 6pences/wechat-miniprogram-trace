/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
} 
page {
  height: 100%;
  background: #f9f9f9;
}
.panel {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.panel .panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6px 0;
  margin: 0 6px;
}
.panel .panel-header .title{
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #1C3D35;
  letter-spacing: 0;
}
.panel .panel-header .subtitle {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #BED8CE;
  letter-spacing: 0;
}
.panel .panel-content {
  padding: 8px;
}

.friend-cell {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 14px;
  box-sizing: border-box;
  box-shadow: 0px 2px 6px lightgray;
}

.friend-cell-info {
  display: flex;
  align-items: center;
  padding: 2% 4% 3%;
}

.friend-cell .img {
  width: 2rem;
  height: 2rem;
}

.friend-cell .name,
.friend-cell .button {
  margin: 0 0 0 1rem;
  opacity: 0.6;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #343434;
  letter-spacing: 0;
}
.friend-cell .name {
  flex: 1;
}
.friend-cell .button {
  color: #EB7E44;
}
.friend-cell .notice {
  width: 100%;
}
.friend-cell .desc {
  color: #343434;
  opacity: 0.6;
  padding: 2% 4% 3%;
  border-top: 1px solid #e9e9e9;
  font-size: 14px;
}