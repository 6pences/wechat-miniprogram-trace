<!--pages/login/login.wxml-->
<view class="page login">
  <image src="/images/login-bg.png" class="login-img" width="100%" height="100%" fit="cover"/>
  <view class="login-title">登录</view>
  <form class="login-form" bindsubmit="login">
      <input class="van-cell" size="large" name="username" type="number" value="{{ loginForm.username }}" placeholder="请输入你的手机号码" border="{{ false }}" error="{{error.username}}" />
      <input class="van-cell" size="large" name="password" password value="{{ loginForm.password }}" placeholder="请输入密码" border="{{ false }}" error="{{error.password}}" />
    <button size="large" square form-type="submit" type="primary"> 登录 </button>
    <button size="large" square plain bindtap="toRegister"> 注册 </button>
    <!-- <a class="btn" type="default" mini bindtap="toInstruction"> 阅读用户使用协助 </a> -->
  </form>
  <!-- <checkbox value="{{ agreement }}" shape="square" bind:change="onChange" color="#07c160"/>登录即同意《用户协助》和《隐私政策》 -->
</view>