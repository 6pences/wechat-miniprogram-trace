/* pages/login/login.wxss */
.login {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: flex-start;
  background-color: #002339;
  padding: 40px;
}
.login-img {
  width: 100%;
  height: 100%;
}
.login-title {
  color: #fff;
  margin: 60px 0;
  align-self: flex-start;
  font-size: 36px;
  font-weight: bold;
}
.login-form {
  width: 100%;
}
button {
  margin: 1rem 0 0 0;
}
.login .van-button--square  {
  border-radius: 6px;
}
.login .van-cell{
  background-color: transparent;
  border-bottom: 1px solid rgba(237,241,249, 0.2);
  padding-left: 0;
}
.login .van-checkbox {
  margin: 10px 0 0 0;
}
.login .van-checkbox__label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 14px;
}
.login .van-checkbox__icon {
  border-radius: 6px;
}
.login .van-button--plain {
  background-color: transparent;
  color: #fff;
  border: 1px solid rgba(237,241,249, 0.2);
}
.login .van-hairline--top-bottom:after {
  border-width: 0;
}
.login .van-field__control {
  color: rgba(255, 255, 255, 0.49)
}