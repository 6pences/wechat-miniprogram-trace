/* pages/login/login.wxss */
.login {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: flex-start;
  background-color: #28E997;
  padding: 40px;
}
.login-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}
.login-title {
  color: #fff;
  margin: 60px 0;
  align-self: flex-start;
  font-size: 36px;
  font-weight: bold;
}
.login-title-image {
  width: 56px;
  height: 39px;
  align-self: flex-start;
  margin-top: 4rem;
  margin-bottom: 1rem;
}
.login-form {
  width: 18rem;
  background-color: #fff;
  border-radius: 14px;
  padding: 20px;
  box-shadow: 0px 2px 9px 0px rgba(0, 0, 0, 0.13);
  z-index: 1;
}
button {
  margin: 1rem 0 0 0;
}
.login .van-button--square  {
  border-radius: 6px;
  background: #28E997;
  border: none;
}
.login .van-cell{
  background-color: transparent;
  border-bottom: 1px solid rgba(237,241,249, 0.2);
  padding-left: 0;
}
.login .van-checkbox {
  margin: 10px 0 0 0;
}
.login .van-checkbox__label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 14px;
  z-index: 1;
}
.login .van-checkbox__icon {
  border-radius: 6px;
  z-index: 1;
}
.login .van-button--plain {
  background-color: transparent;
  color: #28E997;
  border: 1px solid #28E997;
}
.login .van-hairline--top-bottom:after {
  border-width: 0;
}
