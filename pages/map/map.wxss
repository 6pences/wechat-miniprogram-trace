/* pages/map.wxss */
.map-view {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
map {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}
.map-view .map-control {
  height: 100%;
  pointer-events: none;
}
.map-view .map-control button {
  border-radius: 6px;
  background: white;
  height: 36px;
  width: 36px;
  line-height: 36px;
  box-shadow: 0 2px 10px 0 rgba(0,0,0,.1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.map-view .map-control button+button {
  margin-top: 6px;
}
.map-view .map-control .cover-bottom-left {
  position: absolute;
  bottom: 0;
  padding: 6px;
}
.map-view .map-control mp-icon {
  display: block;
}
.map-above {
  width: 100%;
  height: calc(100% - 200px);
}
.map-above movable-view {
  background: white;
}