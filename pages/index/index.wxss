/**index.wxss**/
.user-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.user-center .avatar {
  width: 72px;
  height: 72px;
  margin: 30rpx;
  border-radius: 50%;
}
.user-center > .bg-image {
  position: absolute;
  width: 100%;
  z-index: -1;
}
.user-center>view {
  width: 100%;
  text-align: left;
  color: #fff;
  line-height: 36px;
  display: flex;
  justify-self: flex-start;
  padding: 40px 0;
}
.user-center>view>text {
  margin: 30px 0 0 0;
}
.info-cell {
  width: 100%;
  padding: 4% 6%;
  display: flex;
  justify-content: space-between;
  background: #fff;
  border-radius: 14px;
  box-sizing: border-box;
  align-items: center;
  box-shadow: 0px 2px 6px lightgray;
}
.info-cell text {
  font-weight: Medium;
}

.info-cell text:nth-child(1){
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #343434;
  letter-spacing: 0;
}

.info-cell text:nth-child(2){
  opacity: 0.6;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #343434;
  letter-spacing: 0;
}
.info-cell+.info-cell {
  margin-top: 10px;
}
.logout-btn, .logout-btn>button {
  width: 100%;
  border-radius: 10px;
  background: #F96159;
  border: none;
}