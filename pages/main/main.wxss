/* pages/main/main.wxss */
@import '../../app.wxss';

.search-bar {
  width: 100%;
}
.panel .location {
  display: flex;
  flex-wrap: nowrap!important;
  overflow-x: auto;
}

.friend+.friend {
  margin: 0 0 0 1rem;
}

.friend {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.friend .badge {
  position: absolute;
  margin-top: -3.6rem;
  left: 3.6rem;
}

.friend .img {
  height: 3.6rem;
  width: 3.6rem;
  border-radius: 50%;
}

.friend .name {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #899A96;
  letter-spacing: 0;
}

.panel-content {
  display: flex;
  flex-grow: 1;
  flex-wrap: wrap;
  padding: 8px;
}
.app-view {
  background: #fff;
  box-shadow: 0px 2px 6px lightgray;
  border-radius: 18px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  margin: 0 0 10px 0;
  padding: 18px 20px;
  font-weight: 600;
}

