}

.app-view .app-view-title {
  font-family: PingFangSC-Semibold;
  font-size: 16px;
  color: #1A3B34;
  letter-spacing: 0;
  text-align: center;
  margin: 0 20px;
}

.panel .panel-content {
  display: flex;
  flex-grow: 1;
  flex-wrap: wrap;
}

.app-view .app-view-icon {
  height: 1.2rem;
  width: 1.2rem;
}

.app-view .app-view-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.app-view .app-view-text {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #77807D;
  letter-spacing: 0;
  width: calc(50% - 1.4rem);
  text-align: right;
  align-self: flex-end;
  flex: 1;
}